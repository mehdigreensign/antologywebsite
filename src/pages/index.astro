<script>
  // Smooth scrolling for navigation links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const href = this.getAttribute('href');
      
      // Skip if href is just '#' (invalid selector)
      if (href === '#') {
        return;
      }
      
      const target = document.querySelector(href);
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });

  // Loading spinner functionality
  const loadingSpinner = document.getElementById('loading-spinner');

  function showLoading() {
    loadingSpinner.classList.remove('hidden');
    loadingSpinner.classList.add('flex');
  }

  function hideLoading() {
    loadingSpinner.classList.add('hidden');
    loadingSpinner.classList.remove('flex');
  }

  // Success message functionality
  function showSuccessMessage(formType) {
    const formContainer = document.getElementById(`${formType}-form-container`);
    const successMessage = document.getElementById(`${formType}-success-message`);
    
    // Hide the form and show success message
    formContainer.classList.add('hidden');
    successMessage.classList.remove('hidden');
  }

  // Email functionality for contact sales buttons using Formsubmit.co
  async function sendContactEmail(email, formType) {
    try {
      showLoading();

      // Form submission to sales@antology.ai via Formsubmit.co
      const response = await fetch('https://formsubmit.co/ajax/sales@antology.ai', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json'
        },
        body: JSON.stringify({
          email: email,
          subject: 'Route Optimization Demo Request from Antology.ai',
          message: `New contact request from Antology.ai website.

Email: ${email}
Timestamp: ${new Date().toISOString()}

The prospect is interested in learning more about AI-powered route optimization solution for delivery businesses.

Please follow up to schedule a demo.`
        })
      });

      hideLoading();

      if (response.ok) {
        const data = await response.json();
        if (data.success) {
          showSuccessMessage(formType);
        } else {
          alert('Failed to send your request. Please try again.');
        }
      } else {
        alert('Failed to send your request. Please try again later.');
      }
    } catch (error) {
      hideLoading();
      console.error('Error sending contact email:', error);
      alert('Failed to send your request. Please try again later.');
    }
  }

  // Hero section contact sales
  document.getElementById('hero-contact-btn').addEventListener('click', function() {
    const email = document.getElementById('hero-email').value.trim();
    if (email && email.includes('@')) {
      sendContactEmail(email, 'hero');
    } else {
      alert('Please enter a valid email address');
      document.getElementById('hero-email').focus();
    }
  });

  // CTA section contact sales
  document.getElementById('cta-contact-btn').addEventListener('click', function() {
    const email = document.getElementById('cta-email').value.trim();
    if (email && email.includes('@')) {
      sendContactEmail(email, 'cta');
    } else {
      alert('Please enter a valid email address');
      document.getElementById('cta-email').focus();
    }
  });

  // Allow Enter key to trigger contact sales
  document.getElementById('hero-email').addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
      document.getElementById('hero-contact-btn').click();
    }
  });

  document.getElementById('cta-email').addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
      document.getElementById('cta-contact-btn').click();
    }
  });
</script>